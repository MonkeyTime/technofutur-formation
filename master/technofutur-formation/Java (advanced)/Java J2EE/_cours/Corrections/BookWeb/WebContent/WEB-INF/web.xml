<?xml version="1.0" encoding="UTF-8"?>
<web-app id="WebApp_ID" version="2.4"
	xmlns="http://java.sun.com/xml/ns/j2ee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/j2ee http://java.sun.com/xml/ns/j2ee/web-app_2_4.xsd">
	<display-name>BookWeb</display-name>

	<welcome-file-list>
		<welcome-file>index.do</welcome-file>
	</welcome-file-list>

	<servlet>
		<servlet-name>AddBookServlet</servlet-name>
		<servlet-class>be.wavenet.servlets.AddBookServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>AddBookServlet</servlet-name>
		<url-pattern>/createBook.do</url-pattern>
	</servlet-mapping>
	
	<servlet>
		<servlet-name>DeleteBookServlet</servlet-name>
		<servlet-class>be.wavenet.servlets.DeleteBookServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>DeleteBookServlet</servlet-name>
		<url-pattern>/deleteBook.do</url-pattern>
	</servlet-mapping>
	
	<servlet>
		<servlet-name>SelectForUpdateBookServlet</servlet-name>
		<servlet-class>be.wavenet.servlets.SelectForUpdateBookServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>SelectForUpdateBookServlet</servlet-name>
		<url-pattern>/updateBook.do</url-pattern>
	</servlet-mapping>
	
	<servlet>
		<servlet-name>UpdateBookServlet</servlet-name>
		<servlet-class>be.wavenet.servlets.UpdateBookServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>UpdateBookServlet</servlet-name>
		<url-pattern>/update.do</url-pattern>
	</servlet-mapping>
	
	<servlet>
		<servlet-name>IndexServlet</servlet-name>
		<servlet-class>be.wavenet.servlets.IndexServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>IndexServlet</servlet-name>
		<url-pattern>/index.do</url-pattern>
	</servlet-mapping>
</web-app>
